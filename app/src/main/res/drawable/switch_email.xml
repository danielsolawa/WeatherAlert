<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorDarkestGrey" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" android:bottom="2dp" android:left="1dp"
            android:right="1dp" android:top="1dp">
            <solid android:color="@color/switch_color"/>
        </shape>
    </item>
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <bitmap android:src="@drawable/email_thumb"
            android:tint="@color/colorWhite"
            android:antialias="true"
            />

    </item>
</layer-list>
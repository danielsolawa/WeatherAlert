<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.danielsolawa.locationapp.activity.HomeActivity"
    tools:showIn="@layout/activity_home">

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="150dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weather_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:id="@+id/costam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:id="@+id/current_weather_layout"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:background="@drawable/i01d"
                android:orientation="horizontal"
                android:paddingTop="-150dp">

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="214dp"

                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="101dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.79"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/locality_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_weight="0.30"
                            android:text="Locality"
                            android:textAlignment="center"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desc_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Description"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/pressure_tv"
                            android:layout_width="121dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Pressure"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/wind_speed_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Wind Speed"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/visibility_tv"
                            android:layout_width="122dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Visibility"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/desc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="135dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/temperature_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="temp"
                            android:textAlignment="center"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="date3333"
                            android:textAlignment="center"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chart_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="150dp"></com.github.mikephil.charting.charts.LineChart>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
